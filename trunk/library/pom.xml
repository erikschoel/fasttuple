<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.tears-in-rain.fasttuple</groupId>
		<artifactId>FastTuple</artifactId>
		<version>0.8-SNAPSHOT</version>
	</parent>

	<artifactId>library</artifactId>
	<packaging>jar</packaging>
	<name>FastTupleLibrary</name>
	<url>http://maven.apache.org</url>
	<pluginRepositories>
	</pluginRepositories>
	<dependencies>
		<dependency>
			<groupId>com.google.code.findbugs</groupId>
			<artifactId>jsr305</artifactId>
			<version>1.3.9</version>
			<type>jar</type>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.7</version>
			<type>jar</type>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.tears-in-rain.fasttuple</groupId>
			<artifactId>generator</artifactId>
			<version>0.8-SNAPSHOT</version>
			<type>jar</type>
			<scope>compile</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<version>1.1.1</version>
				<executions>
					<execution>
						<id>gen</id>
						<phase>generate-sources</phase>
						<configuration>
							<mainClass>org.tearsinrain.fasttuple.generate.Generator</mainClass>
							<sourceRoot>${project.build.directory}/generated-sources/fasttuple-generator</sourceRoot>
							<arguments>
								<argument>${project.build.directory}/generated-sources/fasttuple-generator</argument>
								<argument>${project.parent.basedir}/LICENSE.txt</argument>
							</arguments>
						</configuration>
						<goals>
							<goal>java</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<version>1.3</version>
				<executions>
					<execution>
						<id>add-source</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>add-source</goal>
						</goals>
						<configuration>
							<sources>
								<source>${project.build.directory}/generated-sources/fasttuple-generator</source>
							</sources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<version>1.1.1</version>
				<executions>
					<execution>
						<id>formatter</id>
						<phase>install</phase>
						<goals>
							<goal>exec</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<executable>${fasttuple.eclipsepath}</executable>
					<arguments>
						<argument>-nosplash</argument>
						<argument>-application</argument>
						<argument>org.eclipse.jdt.core.JavaCodeFormatter</argument>
						<argument>-verbose</argument>
						<argument>-config</argument>
						<argument>${project.basedir}/config/org.eclipse.jdt.core.prefs</argument>
						<argument>${project.build.directory}/generated-sources/fasttuple-generator</argument>
					</arguments>
					<skip>${fasttuple.skipeclipseformatter}</skip>
				</configuration>

			</plugin>
		</plugins>
	</build>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<fasttuple.skipeclipseformatter>true</fasttuple.skipeclipseformatter>
		<fasttuple.eclipsepath>f</fasttuple.eclipsepath>
	</properties>
</project>
